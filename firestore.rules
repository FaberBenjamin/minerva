rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: check if user is authenticated admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Volunteers collection
    // - Public: can only CREATE (write) new volunteers
    // - Admins: full read/write access
    match /volunteers/{volunteerId} {
      // Anyone can create a volunteer (public registration form)
      allow create: if request.resource.data.keys().hasAll([
        'name', 'email', 'phone', 'address', 'district', 'createdAt', 'submittedAt'
      ]) && request.resource.data.address.keys().hasAll([
        'pir', 'street', 'streetType', 'houseNumber', 'fullAddress'
      ]) && request.resource.data.district.keys().hasAll([
        'oevk', 'votingStation', 'status'
      ]);

      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }

    // Admins collection
    // - Only admins can read/write
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    // Default deny all for other collections
    // (No catch-all rule - everything else is denied by default)
  }
}
